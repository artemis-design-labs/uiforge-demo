# Server Configuration
PORT=3001
NODE_ENV=production

# API Configuration
BAI_API_PORT=3001
BAI_API_BASE_VERSION=/api/v1
BAI_API_URL=http://localhost
BAI_UI_PORT=3000

# MongoDB Connection (use MongoDB Atlas for Vercel)
# Get your connection string from MongoDB Atlas:
# 1. Create a free cluster at https://www.mongodb.com/cloud/atlas
# 2. Create a database user
# 3. Whitelist 0.0.0.0/0 for serverless access
# 4. Get connection string (Database > Connect > Drivers)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/uiforge?retryWrites=true&w=majority

# Figma API Credentials
FIGMA_ACCESS_TOKEN=your_figma_access_token
FIGMA_CLIENT_ID=your_figma_client_id
FIGMA_CLIENT_SECRET=your_figma_client_secret

# JWT Secret (use a strong random string in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_here

# Frontend URL for CORS (your Vercel deployment URL)
FRONTEND_URL=https://your-app.vercel.app

# Demo Mode (set to false in production)
DEMO_MODE=false
